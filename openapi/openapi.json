{
  "openapi": "3.1.0",
  "info": {
    "title": "Robot Farm API",
    "version": "0.1.0",
    "description": "Base OpenAPI definition for Robot Farm services."
  },
  "paths": {
    "/healthz": {
      "get": {
        "summary": "Health check",
        "operationId": "getHealthz",
        "responses": {
          "200": {
            "description": "Server is healthy.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok",
                      "description": "Indicates the server is running."
                    }
                  },
                  "required": [
                    "status"
                  ]
                },
                "examples": {
                  "healthy": {
                    "value": {
                      "status": "ok"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
