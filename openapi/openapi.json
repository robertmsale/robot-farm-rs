{
  "openapi": "3.1.0",
  "info": {
    "title": "Robot Farm API",
    "version": "0.1.0",
    "description": "Base OpenAPI definition for Robot Farm services."
  },
  "paths": {
    "/healthz": {
      "get": {
        "summary": "Health check",
        "operationId": "getHealthz",
        "responses": {
          "200": {
            "description": "Server is healthy.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok",
                      "description": "Indicates the server is running."
                    }
                  },
                  "required": [
                    "status"
                  ]
                },
                "examples": {
                  "healthy": {
                    "value": {
                      "status": "ok"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tasks": {
      "get": {
        "summary": "List tasks",
        "operationId": "listTasks",
        "parameters": [
          {
            "name": "group_slug",
            "in": "query",
            "description": "Filter by owning task group's slug.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "slug",
            "in": "query",
            "description": "Filter by task slug.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "title",
            "in": "query",
            "description": "Filter by task title.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "commit_hash",
            "in": "query",
            "description": "Filter by commit hash.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by task status.",
            "schema": {
              "$ref": "#/components/schemas/TaskStatus"
            }
          },
          {
            "name": "owner",
            "in": "query",
            "description": "Filter by owner display text (e.g., Orchestrator, Quality Assurance, ws42).",
            "schema": {
              "type": "string",
              "pattern": "^(Orchestrator|Quality Assurance|ws\\d+)$"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Array of tasks.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Task"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create task",
        "operationId": "createTask",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TaskCreateInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Task created.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }
          }
        }
      }
    },
    "/tasks/{taskId}": {
      "parameters": [
        {
          "name": "taskId",
          "in": "path",
          "required": true,
          "description": "Unique identifier of the task.",
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }
      ],
      "get": {
        "summary": "Get task",
        "operationId": "getTask",
        "responses": {
          "200": {
            "description": "Task found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }
          },
          "404": {
            "description": "Task not found."
          }
        }
      },
      "put": {
        "summary": "Update task",
        "operationId": "updateTask",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TaskUpdateInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task updated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }
          },
          "404": {
            "description": "Task not found."
          }
        }
      },
      "delete": {
        "summary": "Delete task",
        "operationId": "deleteTask",
        "responses": {
          "204": {
            "description": "Task deleted."
          },
          "404": {
            "description": "Task not found."
          }
        }
      }
    },
    "/tasks/{taskId}/commit": {
      "parameters": [
        {
          "name": "taskId",
          "in": "path",
          "required": true,
          "description": "Unique identifier of the task.",
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }
      ],
      "get": {
        "summary": "Get task commit info",
        "operationId": "getTaskCommitInfo",
        "responses": {
          "200": {
            "description": "Commit information for the task, if available.",
            "content": {
              "application/json": {
                "schema": {
                  "anyOf": [
                    {
                      "$ref": "#/components/schemas/CommitInfo"
                    },
                    {
                      "type": "null"
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Task not found."
          }
        }
      }
    },
    "/tasks/{taskId}/commit/diff": {
      "parameters": [
        {
          "name": "taskId",
          "in": "path",
          "required": true,
          "description": "Unique identifier of the task.",
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }
      ],
      "get": {
        "summary": "Get diff for a file within the task commit",
        "operationId": "getTaskCommitDiff",
        "parameters": [
          {
            "name": "file",
            "in": "query",
            "required": true,
            "description": "Relative path to the file for the diff.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Diff output for the requested file.",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid file path."
          },
          "404": {
            "description": "Task or file not found."
          }
        }
      }
    },
    "/git/status": {
      "get": {
        "summary": "List git status information for all worktrees.",
        "operationId": "getGitStatusSummary",
        "responses": {
          "200": {
            "description": "Aggregated git status for staging and every worker worktree.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GitStatusSummary"
                }
              }
            }
          }
        }
      }
    },
    "/git/status/{worktreeId}": {
      "parameters": [
        {
          "name": "worktreeId",
          "in": "path",
          "required": true,
          "description": "Identifier of the worktree (`staging` or `ws{n}`).",
          "schema": {
            "type": "string",
            "pattern": "^(staging|ws[0-9]+)$"
          }
        }
      ],
      "get": {
        "summary": "Get full git status for a specific worktree, including diff hunks.",
        "operationId": "getGitStatusForWorktree",
        "responses": {
          "200": {
            "description": "Git status details for the requested worktree.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GitWorktreeStatus"
                }
              }
            }
          },
          "404": {
            "description": "Worktree not found."
          }
        }
      }
    },
    "/message_queue": {
      "get": {
        "summary": "List messages in the queue",
        "operationId": "listMessages",
        "parameters": [
          {
            "name": "from",
            "in": "query",
            "description": "Filter messages sent from the specified sender display value.",
            "schema": {
              "$ref": "#/components/schemas/MessageSender"
            }
          },
          {
            "name": "to",
            "in": "query",
            "description": "Filter messages sent to the specified recipient display value.",
            "schema": {
              "$ref": "#/components/schemas/MessageSender"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Messages currently queued.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Message"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Clear all messages",
        "operationId": "deleteAllMessages",
        "responses": {
          "204": {
            "description": "Message queue cleared."
          }
        }
      }
    },
    "/message_queue/{messageId}/insert": {
      "parameters": [
        {
          "name": "messageId",
          "in": "path",
          "required": true,
          "description": "Message identifier used as the relative insertion anchor.",
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }
      ],
      "patch": {
        "summary": "Insert a message relative to another message",
        "operationId": "insertMessageRelative",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InsertMessage"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated ordering.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Message"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Reference message not found."
          }
        }
      }
    },
    "/message_queue/{messageId}": {
      "parameters": [
        {
          "name": "messageId",
          "in": "path",
          "required": true,
          "description": "Identifier of the message to delete.",
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }
      ],
      "delete": {
        "summary": "Delete message by id",
        "operationId": "deleteMessageById",
        "responses": {
          "204": {
            "description": "Message deleted."
          },
          "404": {
            "description": "Message not found."
          }
        }
      }
    },
    "/message_queue/to/{sender}": {
      "parameters": [
        {
          "name": "sender",
          "in": "path",
          "required": true,
          "description": "Recipient display value (e.g., Orchestrator, Quality Assurance, ws7).",
          "schema": {
            "$ref": "#/components/schemas/MessageSender"
          }
        }
      ],
      "delete": {
        "summary": "Delete messages to a recipient",
        "operationId": "deleteMessagesForRecipient",
        "responses": {
          "204": {
            "description": "Messages targeting the recipient deleted."
          }
        }
      }
    },
    "/feed": {
      "get": {
        "summary": "List feed events",
        "operationId": "listFeed",
        "parameters": [
          {
            "name": "source",
            "in": "query",
            "description": "Filter by source (Orchestrator, Quality Assurance, System, ws#).",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "target",
            "in": "query",
            "description": "Filter by target (Orchestrator, Quality Assurance, System, ws#).",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by level (info, warning, error).",
            "schema": {
              "$ref": "#/components/schemas/FeedLevel"
            }
          },
          {
            "name": "order_by",
            "in": "query",
            "description": "Sort results by the specified Feed field.",
            "schema": {
              "$ref": "#/components/schemas/FeedOrderField"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Feed entries.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Feed"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Clear feed",
        "operationId": "deleteFeed",
        "responses": {
          "204": {
            "description": "Feed cleared."
          }
        }
      }
    },
