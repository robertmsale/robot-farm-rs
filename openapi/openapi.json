    }
  },
  "components": {
    "schemas": {
      "TaskStatus": {
        "type": "string",
        "description": "High-level state for a task.",
        "enum": [
          "Ready",
          "Blocked",
          "Done"
        ]
      },
      "FeedLevel": {
        "type": "string",
        "description": "Severity of the feed entry.",
        "enum": [
          "info",
          "warning",
          "error"
        ]
      },
      "FeedOrderField": {
        "type": "string",
        "description": "Valid Feed fields that can be used for ordering.",
        "enum": [
          "id",
          "source",
          "target",
          "ts",
          "level",
          "text",
          "raw",
          "category"
        ]
      },
      "Strategy": {
        "type": "string",
        "description": "System-wide execution strategy.",
        "enum": [
          "AGGRESSIVE",
          "MODERATE",
          "ECONOMICAL",
          "BUG_SMASH",
          "HOTFIX_SWARM",
          "PLANNING",
          "WIND_DOWN"
        ]
      },
      "WorkerState": {
        "type": "string",
        "description": "State reported by the worker.",
        "enum": [
          "Ready",
          "Working",
          "Blocked",
          "Done"
        ]
      },
      "TaskGroupStatus": {
        "type": "string",
        "description": "Derived status for a task group: Done when it has no tasks or every task is Done, otherwise Ready.",
        "enum": [
          "Ready",
          "Done"
        ]
      },
      "Owner": {
        "type": "string",
        "description": "Owner information encoded as display text (\"Orchestrator\", \"Quality Assurance\", or worker handles like \"ws42\").",
        "pattern": "^(Orchestrator|Quality Assurance|ws\\d+)$"
      },
      "MessageSender": {
        "type": "string",
        "description": "Message sender or recipient display value (\"Orchestrator\", \"Quality Assurance\", or worker handles like \"ws42\").",
        "pattern": "^(Orchestrator|Quality Assurance|ws\\d+)$"
      },
      "TaskGroup": {
        "type": "object",
        "description": "Task grouping metadata with derived status.",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "slug": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "$ref": "#/components/schemas/TaskGroupStatus",
            "readOnly": true
          }
        },
        "required": [
          "id",
          "slug",
          "title",
          "description",
          "status"
        ],
        "additionalProperties": false
      },
      "TaskGroupCreateInput": {
        "type": "object",
        "description": "Payload for creating a task group. Status is derived automatically.",
        "properties": {
          "slug": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "slug",
          "title",
          "description"
        ],
        "additionalProperties": false
      },
      "TaskGroupUpdateInput": {
        "type": "object",
        "description": "Payload for updating mutable task group fields. Status cannot be modified directly.",
        "properties": {
          "slug": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "minProperties": 1
      },
      "Message": {
        "type": "object",
        "description": "Represents a queued message between agents.",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "from": {
            "$ref": "#/components/schemas/MessageSender"
          },
          "to": {
            "$ref": "#/components/schemas/MessageSender"
          },
          "message": {
            "type": "string"
          },
          "inserted_at": {
            "type": "integer",
            "format": "int64",
            "description": "Unix timestamp (seconds) when the message was queued."
          }
        },
        "required": [
          "id",
          "from",
          "to",
          "message",
          "inserted_at"
        ],
        "additionalProperties": false
      },
      "InsertMessage": {
        "description": "Directive for inserting a message relative to another message id.",
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "before": {
                "type": "integer",
                "format": "int64"
              }
            },
            "required": [
              "before"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "after": {
                "type": "integer",
                "format": "int64"
              }
            },
            "required": [
              "after"
            ],
            "additionalProperties": false
          }
        ]
      },
      "Feed": {
        "type": "object",
        "description": "Feed entry emitted by system components.",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "source": {
            "type": "string",
            "description": "Emitter of the feed entry (Orchestrator, Quality Assurance, System, ws#)."
          },
          "target": {
            "type": "string",
            "description": "Recipient focus (Orchestrator, Quality Assurance, System, ws#)."
          },
          "ts": {
            "type": "integer",
            "format": "int64",
            "description": "Unix timestamp in seconds."
          },
          "level": {
            "$ref": "#/components/schemas/FeedLevel"
          },
          "text": {
            "type": "string",
            "description": "Human-friendly summary."
          },
          "raw": {
            "type": "string",
            "description": "Raw log payload."
          },
          "category": {
            "type": "string",
            "description": "Category tag for the entry."
          }
        },
        "required": [
          "id",
          "source",
          "target",
          "ts",
          "level",
          "text",
          "raw",
          "category"
        ],
        "additionalProperties": false
      },
      "AppendFilesConfig": {
        "type": "object",
        "description": "Append-file settings for orchestrator and worker roles.",
        "properties": {
          "orchestrator": {
            "type": "array",
            "description": "List of file paths appended to orchestrator prompts.",
            "items": {
              "type": "string"
            }
          },
          "worker": {
            "type": "array",
            "description": "List of file paths appended to worker prompts.",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "orchestrator",
          "worker"
        ],
        "additionalProperties": false
      },
      "CommandConfig": {
        "type": "object",
        "description": "Declarative command configuration.",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "exec": {
            "type": "array",
            "description": "Shell command and arguments to execute.",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "stdout_success_message": {
            "type": "string",
            "nullable": true
          },
          "hidden": {
            "type": "boolean",
            "default": false
          },
          "timeout_seconds": {
            "type": "integer",
            "format": "int64",
            "nullable": true
          },
          "cwd": {
            "type": "string",
            "nullable": true,
            "description": "Override working directory for this command. Paths may be absolute or relative to the workspace root."
          }
        },
        "required": [
          "id",
          "exec"
        ],
        "additionalProperties": false
      },
      "Config": {
        "type": "object",
        "description": "Workspace configuration stored on disk.",
        "properties": {
          "append_agents_file": {
            "$ref": "#/components/schemas/AppendFilesConfig"
          },
          "commands": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CommandConfig"
            },
            "default": []
          },
          "post_turn_checks": {
            "type": "array",
            "description": "Commands executed after each turn.",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "append_agents_file",
          "commands",
          "post_turn_checks"
        ],
        "additionalProperties": false
      },
      "TaskDependency": {
        "type": "object",
        "description": "Represents a dependency relationship where a task depends on another task.",
        "properties": {
          "task_id": {
            "type": "integer",
            "format": "int64"
          },
          "depends_on_task_id": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": [
          "task_id",
          "depends_on_task_id"
        ],
        "additionalProperties": false
      },
      "TaskDependencyCreateInput": {
        "type": "object",
        "description": "Payload for creating a dependency between two tasks.",
        "properties": {
          "task_id": {
            "type": "integer",
            "format": "int64"
          },
          "depends_on_task_id": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": [
          "task_id",
          "depends_on_task_id"
        ],
        "additionalProperties": false
      },
      "Task": {
        "type": "object",
        "description": "Primary task resource mirroring server/src/models/task.rs.",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "group_id": {
            "type": "integer",
            "format": "int64"
          },
          "slug": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "commit_hash": {
            "type": "string",
            "description": "Commit hash associated with the task.",
            "nullable": true
          },
          "status": {
            "$ref": "#/components/schemas/TaskStatus"
          },
          "owner": {
            "$ref": "#/components/schemas/Owner"
          }
        },
        "required": [
          "id",
          "group_id",
          "slug",
          "title",
          "status",
          "owner"
        ],
        "additionalProperties": false
      },
      "TaskCreateInput": {
        "type": "object",
        "description": "Payload for creating a task.",
        "properties": {
          "group_id": {
            "type": "integer",
            "format": "int64"
          },
          "slug": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "commit_hash": {
            "type": "string",
            "description": "Commit hash associated with the task.",
            "nullable": true
          },
          "status": {
            "$ref": "#/components/schemas/TaskStatus"
          },
          "owner": {
            "$ref": "#/components/schemas/Owner"
          }
        },
        "required": [
          "group_id",
          "slug",
          "title",
          "status",
          "owner"
        ],
        "additionalProperties": false
      },
      "TaskUpdateInput": {
        "type": "object",
        "description": "Payload for updating a task.",
        "properties": {
          "group_id": {
            "type": "integer",
            "format": "int64"
          },
          "slug": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "commit_hash": {
            "type": "string",
            "description": "Commit hash associated with the task.",
            "nullable": true
          },
          "status": {
            "$ref": "#/components/schemas/TaskStatus"
          },
          "owner": {
            "$ref": "#/components/schemas/Owner"
          }
        },
        "additionalProperties": false,
        "minProperties": 1
      },
      "Worker": {
        "type": "object",
        "description": "Worker metadata.",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "last_seen": {
            "type": "integer",
            "format": "int64",
            "description": "Unix timestamp in seconds when the worker last reported."
          },
          "state": {
            "$ref": "#/components/schemas/WorkerState"
          }
        },
        "required": [
          "id",
          "last_seen",
          "state"
        ],
        "additionalProperties": false
      },
      "ActiveStrategy": {
        "type": "object",
        "description": "Represents the globally active strategy and optional focus task groups.",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/Strategy"
          },
          "focus": {
            "type": "array",
            "description": "Optional list of task group identifiers receiving additional focus.",
            "items": {
              "type": "integer",
              "format": "int64"
            },
            "nullable": true
          }
        },
        "required": [
          "id"
        ],
        "additionalProperties": false
      },
      "CommitInfo": {
        "type": "object",
        "description": "Metadata about a task's tracked commit.",
        "properties": {
          "hash": {
            "type": "string",
            "description": "Full commit hash."
          },
          "message": {
            "type": "string",
            "description": "Commit message."
          },
          "diff": {
            "type": "string",
            "description": "Output of `git diff --stat {hash}^!`."
          }
        },
        "required": [
          "hash",
          "message",
          "diff"
        ],
        "additionalProperties": false
      },
      "GitStatusSummary": {
        "type": "object",
        "description": "Aggregated git status for every discovered worktree.",
        "properties": {
          "worktrees": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GitWorktreeStatus"
            }
          }
        },
        "required": [
          "worktrees"
        ],
        "additionalProperties": false
      },
      "GitWorktreeStatus": {
        "type": "object",
        "description": "Git status data for a single worktree.",
        "properties": {
          "id": {
            "type": "string",
            "description": "Logical identifier (staging or ws{n})."
          },
          "path": {
            "type": "string",
            "description": "Absolute filesystem path to the worktree."
          },
          "branch": {
            "type": "string",
            "description": "Currently checked out branch."
          },
          "upstream": {
            "type": "string",
            "description": "Configured upstream tracking branch, if any.",
            "nullable": true
          },
          "ahead": {
            "type": "integer",
            "description": "Number of commits ahead of upstream.",
            "minimum": 0
          },
          "behind": {
            "type": "integer",
            "description": "Number of commits behind upstream.",
            "minimum": 0
          },
          "is_dirty": {
            "type": "boolean",
            "description": "True when there are local modifications."
          },
          "files": {
            "type": "array",
            "description": "Per-file change metadata.",
            "items": {
              "$ref": "#/components/schemas/GitStatusFileChange"
            }
          }
        },
        "required": [
          "id",
          "path",
          "branch",
          "ahead",
          "behind",
          "is_dirty",
          "files"
        ],
        "additionalProperties": false
      },
      "GitStatusFileChange": {
        "type": "object",
        "description": "Represents a single file appearing in git status output.",
        "properties": {
          "path": {
            "type": "string",
            "description": "Current file path relative to the worktree root."
          },
          "old_path": {
            "type": "string",
            "description": "Previous path when the file was renamed or moved.",
            "nullable": true
          },
          "status_code": {
            "type": "string",
            "description": "Two-character porcelain status code (e.g., M?, R?)."
          },
          "additions": {
            "type": "integer",
            "description": "Number of added lines reported by git.",
            "minimum": 0
          },
          "deletions": {
            "type": "integer",
            "description": "Number of removed lines reported by git.",
            "minimum": 0
          },
          "hunks": {
            "type": "array",
            "description": "Diff hunks for this file when requested.",
            "items": {
              "$ref": "#/components/schemas/GitStatusHunk"
            },
            "nullable": true
          }
        },
        "required": [
          "path",
          "status_code",
          "additions",
          "deletions"
        ],
        "additionalProperties": false
      },
      "GitStatusHunk": {
        "type": "object",
        "description": "Single diff hunk extracted from git output.",
        "properties": {
          "header": {
            "type": "string",
            "description": "The @@ header line describing the hunk range."
          },
          "lines": {
            "type": "array",
            "description": "All lines within the hunk including +/- context.",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "header",
          "lines"
        ],
        "additionalProperties": false
      },
      "ExecResult": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string"
          },
          "exit_code": {
            "type": "integer"
          },
          "stdout": {
            "type": "string"
          },
          "stderr": {
            "type": "string"
          }
        },
        "required": [
          "command",
          "exit_code",
          "stdout",
          "stderr"
        ],
        "additionalProperties": false
      },
      "ExecCommandInput": {
        "type": "object",
        "description": "Request payload for executing a shell command.",
        "properties": {
          "command": {
            "type": "string",
            "minLength": 1
          },
          "cwd": {
            "type": "string",
            "nullable": true,
            "description": "Optional working directory override relative to the workspace root."
          }
        },
        "required": [
          "command"
        ],
        "additionalProperties": false
      }
    }
  }
}
